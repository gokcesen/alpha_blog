<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-dark rounded", local: true) do |f| %>
        <div class="form-group row mb-3">
          <%= f.label :username, class: "col-2 col-form-label text-light" %> 
          <div class="col-10">
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter the username " %> 
          </div>
        </div>
        
        <div class="form-group row mb-3">
          <%= f.label :email, class: "col-2 col-form-label text-light" %> 
          <div class="col-10">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter the e-mail addresse " %> 
          </div>
        </div> 

        <div class="form-group row mb-3">
          <%= f.label :password, class: "col-2 col-form-label text-light" %> 
          <div class="col-10">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter the password " %> 
          </div>
        </div> 
        
        <div class="form-group row justify-content-center">
          <div class="col-10 text-center">
            <%= f.submit(@user.new_record? ? "Sign up" : "Update", class: "btn btn-outline-light btn-sm", style: "width: 200px;") %>
          </div>
        </div>
      <% end %>
      
      <%= link_to "Back to articles", articles_path, class: "btn btn-secondary mt-3" %>
    </div>
  </div>
</div>
