<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-dark rounded", local: true) do |f| %>
        <div class="form-group row mb-3">
          <%= f.label :title, class: "col-2 col-form-label text-light" %> 
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %> 
          </div>
        </div>
        
        <div class="form-group row mb-3">
          <%= f.label :description, class: "col-2 col-form-label text-light" %> 
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %> 
          </div>
        </div> 

        <div class="form-group row mb-3">
          <%= f.label :category, class: "col-2 col-form-label text-light" %> 
          <div class="col-10">
            <%= f.collection_select(:category_ids, Category.all, :id, :name,
            { prompt: "Make your selection from the list below (can be empty)"}, { multiple: true, size: 3, class: "custom-select shadow rounded equal-width" }) %>
          </div>
        </div>
        
        <div class="form-group row justify-content-center">
          <div class="col-10 text-center">
            <%= f.submit "Save", class: "btn btn-outline-light btn-sm", style: "width: 200px;" %>
          </div>
        </div>
      <% end %>
      
      <%= link_to "Back to articles", articles_path, class: "btn btn-secondary mt-3" %>
    </div>
  </div>
</div>
 